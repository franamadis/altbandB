<%= simple_form_for([@flat, @booking], input_html: { class: "new_flat", style: "font-size: medium"}) do |f| %>
  <% if @booking.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>Â£<%= @flat.price  %> per night </p>
  <hr>
  Number of Nights:
  <%= f.input :period, placeholder: "Insert the number of nights you want", :collection => 1..30, default: '1', label: false %>
  <hr>
  Arrival date:
  <%= f.date_field :arrival, data:{ provide:'datepicker' } %>
  <hr>
  Max Guests: <%= @flat.max_guests %>
  <%= f.input :guests, placeholder: "Max Guests: '#{@flat.max_guests}'", :collection => 1..@flat.max_guests, default: '1', label: false %>

  <%= f.button :submit, class: "btn btn-secondary" %>
<% end %>




