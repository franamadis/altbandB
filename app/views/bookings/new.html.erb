<div class="container">

  <div class="row">
    <div class="col-xs-8">
      <div class="boxes">
        <% if @flat.photo? %>
          <div class="banner banner-image" style="background-image: url('<%= cl_image_path @flat.photo %>');">
          </div>
        <% else %>
          <div class="banner banner-image" style="background-image: url('<%= image_path("example.png")%>');">
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-4">
      <div class="boxes" id="formulaire">
        <h2><%= @flat.name %></h2>
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
