
<%= simple_form_for @flat do |f| %>
<%= f.input :name, placeholder: "Name of your flat", label: false %>
<%= f.input :address, placeholder: "Type the address", label: false %>
<%= f.input :description, placeholder: "Tell us more about the flat", label: false %>
<%= f.input :price, placeholder: "Price per night (Â£)", label: false %>
<%= f.input :max_guests, :collection => 1..15, label: false, :prompt => "Maximum of guests" %>

<p>Upload photo of the flat</p>

<label class="btn btn-primary">
  Add a file!
  <span style="display:none;">
    <%= f.input :photo, required: true, name: 'image' %>
  </span>
</label>

<%= f.input :photo_cache, as: :hidden %>
<%= f.button :submit %>
<% end %>

