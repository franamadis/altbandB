<div>
  <% if @flat.photo? %>
    <div class="banner banner-image" style="background-image: url('<%= cl_image_path @flat.photo %>');">
  <% else %>
      <div class="banner banner-image" style="background-image: url('<%= image_path("example.png")%>');">
    <% end %>
      <div class="banner-content uptext">
        <h2><%= @flat.name %></h2>
        <p><%= @flat.address %></p>
        <p><%= @flat.description %></p>
        <p><%= @flat.price %></p>
        <p><%= @flat.max_guests %></p>
      </div>
    </div>

    <hr>
    </div>
    <% if policy(@flat).edit? %>
      <div class="buttons">
        <%= link_to "Update", edit_flat_path(@flat) %>
        <%= link_to "Delete", flat_path(@flat), method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
      </div>
    <% end %>
</div>
